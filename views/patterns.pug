include _nav
include _glitch
doctype html
html
  head
    title #{title}
    include _commonmeta.pug
    include _bootstrap.pug
    include _fontawesome.pug
  body
    header
      div.mt-5.text-center
        img(src="https://cdn.glitch.com/29d57bd2-6ac1-4702-9368-3907c36bd191%2Fjaneburnsheader.png?v=1587509724660")
    h1.sr-only
      Jane Burns Designs
    main(class="container")
      div
        ul
          each pattern in patterns
            li
              a(href="pattern/" +pattern.sku.replace('JB-','').replace('EB-',''))= pattern.title
          
    footer.container
      span Made with 
      a(href='https://glitch.com') Glitch
      +glitch()
